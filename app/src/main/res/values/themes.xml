<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CoinMonitor" parent="Theme.AppCompat.DayNight">
        <!-- Customize your light theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="Theme.CoinMonitor" parent="Base.Theme.CoinMonitor" />

    <style name="Theme.CoinMonitor.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/graph</item>
        <item name="postSplashScreenTheme">@style/Theme.CoinMonitor</item>
    </style>
</resources>